<%- include('../partials/header') %>

<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Desserts.TO</h1>
            <p class="lead fw-normal text-white-50 mb-0">Let's create the largest repository for desserts in Toronto!</p>
        </div>
    </div>
</header>


<!-- Section-->
<section class="py-5" style="background-size: cover; background-image: url(https://images.unsplash.com/photo-1517816743773-6e0fd518b4a6?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80)">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            <% allDesserts.forEach(function(d) { %>
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Delete the dessert entry -->
                    <form action="/desserts/<%= d._id %>?_method=DELETE" method="POST">
                        <button class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">x</button>
                    </form>
                    <!-- Product image-->
                    <img class="card-img-top" src="<%= d.photo %>" alt="..." />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder"><a href="/desserts/<%= d._id %>"><%= d.name %></a></h5>
                            <!-- Product Location-->
                            <%= d.location %>
                        </div>
                    </div>

                </div>
            </div>
            <% }); %>
        </div>
    </div>
</section>



<%- include('../partials/footer') %>